{
    "description": "Terminate EKS Worker Node",
    "targets": {
        "FisWorkshopEKSWorkerNode": {
            "resourceType": "aws:ec2:instance",
            "resourceTags": {
                "eks:nodegroup-name": "FisWorkshopNG"
            },
            "filters": [
                {
                    "path": "State.Name",
                    "values": [
                        "running"
                    ]
                }
            ],
            "selectionMode": "COUNT(1)"
        }
    },
    "actions": {
        "EKSWorkerNodeTerminate": {
            "actionId": "aws:ec2:terminate-instances",
            "parameters": {},
            "targets": {
                "Instances": "FisWorkshopEKSWorkerNode"
            }
        }
    },
    "stopConditions": [
        {
            "source": "none"
        }
    ],
    "roleArn": "arn:aws:iam::<ACCOUNT ID>:role/FisWorkshopServiceRole",
    "tags": {
        "Name": "FisWorkshopEKS"
    }
}