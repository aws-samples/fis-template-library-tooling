{
    "description": "Terminate ECS Cluster Instance",
    "targets": {
        "FisWorkshopECSInstance": {
            "resourceType": "aws:ec2:instance",
            "resourceTags": {
                "Name": "FisStackEcs/EcsAsgProvider"
            },
            "filters": [
                {
                    "path": "State.Name",
                    "values": [
                        "running"
                    ]
                }
            ],
            "selectionMode": "COUNT(1)"
        }
    },
    "actions": {
        "ECSInstanceTerminate": {
            "actionId": "aws:ec2:terminate-instances",
            "parameters": {},
            "targets": {
                "Instances": "FisWorkshopECSInstance"
            }
        }
    },
    "stopConditions": [
        {
            "source": "none"
        }
    ],
    "roleArn": "arn:aws:iam::<ACCOUNT ID>:role/FisWorkshopServiceRole",
    "tags": {
        "Name": "FisWorkshopECS"
    }
}