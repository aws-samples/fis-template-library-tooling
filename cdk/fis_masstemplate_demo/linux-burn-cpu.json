{
    "description": "Inject CPU stress on Linux",
    "targets": {
        "FisWorkshop-StressLinux": {
            "resourceType": "aws:ec2:instance",
            "resourceTags": {
                "Name": "FisLinuxCPUStress"
            },
            "selectionMode": "ALL"
        }
    },
    "actions": {
        "StressCPUViaSSM": {
            "actionId": "aws:ssm:send-command",
            "parameters": {
                "documentArn": "arn:aws:ssm:us-west-2::document/AWSFIS-Run-CPU-Stress",
                "documentParameters": "{\"DurationSeconds\":120}",
                "duration": "PT2M"
            },
            "targets": {
                "Instances": "FisWorkshop-StressLinux"
            }
        }
    },
    "stopConditions": [
        {
            "source": "none"
        }
    ],
    "roleArn": "arn:aws:iam::<ACCOUNT ID>:role/FisCpuStress-FISRole-1DKE070S8TR9M",
    "tags": {
        "Name": "LinuxBurnCPUviaSSM"
    }
}