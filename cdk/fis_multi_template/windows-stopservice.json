{
    "description": "This Experiment Stops the IIS service on target Windows Instances",
    "targets": {
        "IISServers": {
            "resourceType": "aws:ec2:instance",
            "resourceTags": {
                "FIS-Ready": "true"
            },
            "selectionMode": "ALL"
        }
    },
    "actions": {
        "StopIIS": {
            "actionId": "aws:ssm:send-command",
            "parameters": {
                "documentArn": "arn:aws:ssm:<REGION>:<ACCOUNT ID>:document/StopWindowsService",
                "documentParameters": "{\"DurationSeconds\": \"60\", \"ServiceName\": \"W3SVC\"}",
                "duration": "PT5M"
            },
            "targets": {
                "Instances": "IISServers"
            }
        }
    },
    "stopConditions": [
        {
            "source": "none"
        }
    ],
    "roleArn": "arn:aws:iam::<ACCOUNT ID>:role/WindowsFisDemo-fisRolefisrole906DA1E4-1V96J3Q2BR4B",
    "tags": {
        "Name": "StopWindowsService"
    },
    "logConfiguration": {
        "cloudWatchLogsConfiguration": {
            "logGroupArn": "arn:aws:logs:<REGION>:<ACCOUNT ID>:log-group:WindowsFisDemo-stopServiceLogGroupA5EB8CBE-LPIV2mBQZMkw:*"
        },
        "logSchemaVersion": 1
    }
}